<%= f.hidden_field :current_step, value: f.object.current_step %>

<%= render "profiles/steps/page#{f.object.current_step + 1}", f: f %>

<div class="form-actions">
<center>
  <%= f.submit "Back", name: "back_button" , class: 'btn btn-primary' unless f.object.first_step? %>
  <%= f.submit f.object.last_step? ? nil: "Next" , {class: 'btn btn-primary profile_submit'}%>
</center>
</div>