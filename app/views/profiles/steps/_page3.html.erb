<div class="panel panel-default devise-bs offset-md-3 col-md-6">
  <div class="panel-body"> 
      <div class="form-group">
      <%= f.label "Select Package" %><br />
      <%= f.select :package_id, options_for_select(Package.all.map {|p| [ ("#{p.name}" + " - $" + "#{p.cost}" + " - " + "#{p.coins}"+"coins"), p.id ]},@profile.package), {prompt: 'Select Package'}, { class: "form-control select_package" } %>
